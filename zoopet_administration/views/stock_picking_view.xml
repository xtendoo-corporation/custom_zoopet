<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="zoopet_administration.view_picking_form_no_create" model="ir.ui.view">
            <field name="name">stock.picking.no.create.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{"no_create": True}</attribute>
                </xpath>
                 <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{"no_create": True}</attribute>
                </xpath>
                 <xpath expr="//form//tree" position="attributes">
                    <attribute name="limit">800</attribute>
                </xpath>
            </field>
        </record>

         <record id="zoopet_administration.view_scrap_form_no_create" model="ir.ui.view">
            <field name="name">stock.scrap.no.create.form</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{"no_create": True}</attribute>
                </xpath>
            </field>
        </record>
         <record id="zoopet_administration.view_picking_form_edit_carrier" model="ir.ui.view">
            <field name="name">view.picking.form.edit.carrier</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='carrier_id']" position="replace">
                    <field name="carrier_id" options="{'no_create': True, 'no_open': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
