<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="zoopet_administration.mrp_bom_form_view_print_inherit" model="ir.ui.view">
            <field name="name">mrp.bom.form.view.print.inherit</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='routing_id']" position="after">
                    <field name="to_print"/>
                </xpath>
                <xpath expr="//field[@name='product_tmpl_id']" position="attributes">
                    <attribute name="options">{"no_create": True}</attribute>
                </xpath>
               <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{"no_create": True}</attribute>
                </xpath>
            </field>
        </record>

         <record id="zoopet_administration.mrp_production_form_view_no_create" model="ir.ui.view">
            <field name="name">mrp.production.form.view.no.create</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{"no_create": True}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
