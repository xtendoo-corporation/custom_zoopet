         </record>

         <record id="hide_so_tags_order" model="ir.ui.view">
            <field name="name">sale.order.tag.form.order.zoopet</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="zoopet_sale_order_tags.sale_order_tag_view_form_zoopet"/>
