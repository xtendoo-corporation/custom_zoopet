<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <data>

        <report id="document_format_zoopet.report_invoice_not_use_grouped"
                string="Facturas Agrupada(NO USAR)"
                model="account.move"
                report_type="qweb-pdf"
                name="document_format_zoopet.report_invice_not_use_grouped"
                print_report_name="'Invoice - %s - %s' % (object.partner_id.name or '', object.name)"
                paperformat="document_format_zoopet.a4_invoice"
        />

        <record id="document_format_zoopet.report_invoice_not_use_grouped" model="ir.actions.report">
            <field name="groups_id" eval="[(4, ref('zoopet_administration.print_all_formats'))]"/>
        </record>

        <template id="document_format_zoopet.report_invice_not_use_grouped">
            <t t-name="document_format_zoopet.report_invoice_not_use_grouped">
                <t t-call="web.html_container">
                    <t t-set="iteration" t-value="0"/>
                    <t t-foreach="docs" t-as="o">
                        <!-- Comprobamos que numero de copias sea > 1-->
                        <t t-if="o.partner_id.copy_num &lt; 2">
                            <t t-set="lang"
                               t-value="o.user_id.sudo().lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                            <t t-call="document_format_zoopet.report_invoice_not_use_grouped_document" t-lang="lang"/>
                        </t>
                        <t t-else="">
                            <!-- lanzamos el bucle si es mayor que 1 -->
                            <t t-foreach="int(o.partner_id.copy_num)" t-as="">
                                <t t-set="iteration" t-value="iteration+1"/>
                                <t t-set="lang"
                                   t-value="o.user_id.sudo().lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                                <t t-call="document_format_zoopet.report_invoice_not_use_grouped_document"
                                   t-lang="lang"/>
                            </t>
                        </t>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
