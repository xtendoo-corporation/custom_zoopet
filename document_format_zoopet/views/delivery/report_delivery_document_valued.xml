								        <t t-set="partner_name" t-value="partner_name[:partner_num]" />
							        </t>
							        <span t-esc="partner_name"/>
                                </div>
                                <div t-else="">
                                    <t t-set="partner_name" t-value="o.partner_id.name"/>
