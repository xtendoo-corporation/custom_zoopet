                        </div>
                        <!-- fin datos documento -->
                        <!-- observaciones -->
                        <div style="width:49%;float:left;margin-left:0.5%;border:2px solid black;height:51px;margin-top:5px;margin-bottom:5px;">
                            <span style="margin-left:2px;"><b>Observaciones: </b></span><span t-field="o.note"/>
                        </div>
                        <!-- fin observaciones -->
                        <!-- Fin datos documento -->
                        <table class="table" style="clear:both;width:100%;border-bottom:2px solid black;">
