<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
      <report id="document_format_zoopet.sale_delivery"
                string="Albarán"
                model="sale.order"
                report_type="qweb-pdf"
                name="document_format_zoopet.sale_delivery_document"
                print_report_name="(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)"
                paperformat="document_format_zoopet.A4_sales"
        />
        <template id="document_format_zoopet.sale_delivery_document">
            <t t-name="document_format_zoopet.sale_delivery_document">
               <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="doc">
                        <t t-call="document_format_zoopet.report_sale_delivery_document" t-lang="doc.partner_id.lang"/>
                    </t>
                </t>
            </t>
        </template>
        <template id="document_format_zoopet.report_sale_delivery_document">
            <t t-name="document_format_zoopet.report_sale_delivery_document">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-set="isAlbaran" t-value="'sale'"/>
                        <t t-set="carrier_delivery" t-value="hola"/>
                        <t t-set="doc_name" t-value="doc.delivery_ids.name"/>
                        <t t-set="lumps_number" t-value="doc.lumps_number"/>
                        <t t-set="palets_number" t-value="doc.palets_number"/>
                        <div class="oe_structure"/>
                        <!-- Direcciones -->
                        <!-- DIreccion de facturacion -->
                        <div style="width:49%;float:left;clear:both;margin-right:0.5%;border:2px solid black;height:223px;">
                        <div style="background-color:blue;color:white;text-align:center;">
                            Dirección de facturacíon
                        </div>
                        <div t-if="doc.partner_id" style="margin-left:2%;">
                            <!-- nombre -->
                            <div t-if="doc.partner_id.name">
                                <t t-set="partner_name" t-value="doc.partner_id.name"/>
                                <t t-set="partner_name" t-value="doc.partner_id.name"/>
							    <t t-set="partner_num" t-value="partner_name.find('(') -1"/>
							    <t t-if="partner_num &gt; 0">
								    <t t-set="partner_name" t-value="partner_name[:partner_num]" />
							    </t>
							    <span t-esc="partner_name"/>
                            </div>
                            <!-- nombre commercial_name -->
                            <div t-if="doc.partner_id.comercial">
                                <span t-field="doc.partner_id.comercial"/>
                            </div>
                            <!-- calle -->
                            <div>
                                <span t-field="doc.partner_invoice_id.street"/>
                            </div>
                            <!-- calle 2 -->
                            <div>
                                <span t-field="doc.partner_invoice_id.street2"/>
                            </div>
                            <!-- CP, ciudad -->
                            <div>
                                <span t-if="doc.partner_invoice_id.zip" t-field="doc.partner_invoice_id.zip"/>
                                <span t-if="doc.partner_invoice_id.city" t-field="doc.partner_invoice_id.city"/>
                            </div>
                            <!-- Provincia -->
                            <div>
                                <span t-if="doc.partner_invoice_id.state_id.name" t-field="doc.partner_invoice_id.state_id.name"/>
                            </div>
                            <!-- tlf -->
                            <div>
                                <span t-if="doc.partner_invoice_id.phone">TLF.:</span>
                                <span t-if="doc.partner_invoice_id.phone" t-field="doc.partner_invoice_id.phone"/>
                                <span t-if="doc.partner_invoice_id.mobile">, </span><span t-if="doc.partner_invoice_id.mobile" t-field="doc.partner_invoice_id.mobile"/>
                            </div>
                            <!-- CIF/NIF -->
                            <div>
                                <span t-if="doc.partner_invoice_id.vat">NIF/CIF:</span>
                                <span t-if="doc.partner_invoice_id.vat" t-field="doc.partner_invoice_id.vat"/>
                            </div>
                            <!-- Nota -->
                            <t t-if="doc.partner_id != doc.partner_invoice_id">
                                <div t-if="doc.partner_invoice_id.comment">
                                    <span>Nota: </span><span t-field="doc.partner_invoice_id.comment"/>
                                </div>
                            </t>
                        </div>
                    </div>
                    <!-- Fin direccion de facturacion -->
                    <!-- Direccion de envio -->
                    <div style="width:49%;float:left;border:2px solid black;margin-left:0.5%;height:223px;">
                        <div style="background-color:blue;color:white;text-align:center;">
                            Dirección de envío
                        </div>
                        <div t-if="doc.partner_id" style="margin-left:2%;">
                            <!-- nombre -->
                            <div t-if="doc.partner_id.name">
                                <t t-set="partner_name" t-value="doc.partner_id.name"/>
							    <t t-set="partner_num" t-value="partner_name.find('(') -1"/>
							    <t t-if="partner_num &gt; 0">
								    <t t-set="partner_name" t-value="partner_name[:partner_num]" />
							    </t>
							    <span t-esc="partner_name"/>

                            </div>
                            <!-- nombre commercial_name -->
                            <div t-if="doc.partner_id.comercial">
                                <span t-field="doc.partner_id.comercial"/>
                            </div>
                            <!-- calle -->
                            <div>
                                <span t-field="doc.partner_shipping_id.street"/>
                            </div>
                             <!-- calle 2 -->
                            <div>
                                <span t-field="doc.partner_shipping_id.street2"/>
                            </div>
                            <!-- CP, ciudad -->
                            <div>
                                <span t-if="doc.partner_shipping_id.zip" t-field="doc.partner_shipping_id.zip"/>
                                <span t-if="doc.partner_shipping_id.city" t-field="doc.partner_shipping_id.city"/>
                            </div>
                            <!-- Provincia -->
                            <div>
                                <span t-if="doc.partner_shipping_id.state_id.name" t-field="doc.partner_shipping_id.state_id.name"/>
                            </div>
                            <!-- tlf -->
                            <div>
                                <span t-if="doc.partner_shipping_id.phone">TLF.: </span><span t-if="doc.partner_shipping_id.phone" t-field="doc.partner_shipping_id.phone"/>
                                <span t-if="doc.partner_shipping_id.mobile">, </span><span t-if="doc.partner_shipping_id.mobile" t-field="doc.partner_shipping_id.mobile"/>
                            </div>
                            <!-- Nota -->
                            <t t-if="doc.partner_id != doc.partner_shipping_id">
                                <div t-if="doc.partner_shipping_id.comment">
                                    <span>Nota: </span><span t-field="doc.partner_shipping_id.comment"/>
                                </div>
                            </t>
                        </div>
                    </div>
                    <!-- Fin direccion de envio -->
                    <!-- Fin direcciones -->
                        <!-- Datos documento y observaciones -->
                        <!-- datos documento -->
                        <div style="width:49.5%;clear:both;float:left;margin-right:0.5%;margin-top:5px;font-size:0.9em;margin-bottom:5px;">
                            <div style="width:49.5%;float:left;border:2px solid black;height:25px;">
                                <span style="margin-left:2px;">
                                    <b>
                                        <span>Albarán: </span>
                                    </b>
                                </span>
                                <span t-field="doc.delivery_ids.name" style="font-size:0.8em;"/>
                            </div>
                            <div style="width:49%;float:left;border-bottom:2px solid black;border-right:2px solid black;border-top:2px solid black;height:25px;">
                                <span style="margin-left:2px;">
                                    <b>Fecha: </b>
                                </span>
                                <span t-field="doc.date_order" t-options="{&quot;format&quot;: &quot;dd/MM/yyyy&quot;}"/>
                            </div>
                            <div style="width:49.5%;float:left;border-bottom:2px solid black;border-left:2px solid black;border-right:2px solid black;height:25px;">
                                <span style="margin-left:2px;">
                                    <b>Cliente: </b>
                                </span>
                                <span t-if="doc.partner_id.parent_id" t-field="doc.partner_id.parent_id.ref"/>
                                <span t-if=" not doc.partner_id.parent_id" t-field="doc.partner_id.ref"/>
                            </div>
                            <div style="width:49%;float:left;border-bottom:2px solid black;border-right:2px solid black;height:25px;">
                                <span style="margin-left:2px;"><b>Pedido: </b></span>
                                <t t-set="name_with_type" t-value="doc.type_id.journal_id.code + '/' + doc.name"/>
                                <span t-esc="name_with_type"/>
                            </div>
                        </div>
                        <!-- fin datos documento -->
                        <!-- observaciones -->
                        <div style="width:49%;float:left;margin-left:0.5%;border:2px solid black;height:51px;margin-top:5px;">
                            <span style="margin-left:2px;">
                                <b>Observaciones: </b>
                            </span>
                            <span t-field="doc.note"/>
                        </div>
                        <!-- fin observaciones -->
                        <!-- Fin datos documento -->
                        <!-- Is there a discount on at least one line? -->
                        <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
                        <!-- Descuentos -->
                        <t t-set="total_discount1" t-value="0"/>
                        <t t-foreach="doc.order_line" t-as="line">
                            <t t-set="line_discount1" t-value="0"/>
                            <t t-set="unit_price" t-value="line.price_unit"/>
                            <t t-if="line.product_id">
                                <t t-if="line.discount != 0">
                                    <t t-set="line_discount1" t-value="(unit_price * line.discount /100)*line.product_uom_qty"/>
                                    <t t-set="unit_price" t-value="unit_price - unit_price * line.discount /100"/>
                                </t>
                                <t t-if="line_discount1 != 0">
                                    <t t-set="total_discount1" t-value="total_discount1 + line_discount1"/>
                                </t>
                            </t>
                        </t>
                        <!-- fin descuentos -->
                        <table class="table" style="clear:both;width:100%;border-bottom:2px solid black;">
                            <thead>
                                <tr style="border-top:4px solid black;">
                                    <th style="padding:0px;margin:0px;border-bottom:2px solid black;">
                                        <div style="clear:both;width:100%;color:black;font-size:0.7em;">
                                            <div style="height:14px; width:11%; display:block; float:left;text-align:left;">
                                                <span>
                                                    <b>Código</b>
                                                </span>
                                            </div>
                                            <div style="height:14px; width:43%; display:block;float:left;text-align:left;">
                                                <span>
                                                    <b>Descripción</b>
                                                </span>
                                            </div>
                                            <!--<div style="height:14px; width:8%; display:block; float:left;text-align:right;">
                                                <span>
                                                    <b>IVA%</b>
                                                </span>
                                            </div>-->
                                            <div style="height:14px; width:8%; display:block; float:left;text-align:right;">
                                                <span>
                                                    <b>UD</b>
                                                </span>
                                            </div>
                                            <div style="height:14px; width:10%; display:block;float:left;text-align:right;">
                                                <span>
                                                    <b>Precio/U</b>
                                                </span>
                                            </div>
                                            <div style="height:14px; width:8%;  display:block; float:left;text-align:right;">
                                                <t t-if="total_discount1 != 0">
                                                    <span>
                                                        <b>Desc%</b>
                                                    </span>
                                                </t>
                                            </div>
                                            <div style="height:14px; width:10%;  display:block; float:left;text-align:right;">
                                                <span>
                                                    <b>Neto</b>
                                                </span>
                                            </div>
                                            <div style="height:14px; width:10%;  display:block; float:left;text-align:right;">
                                                <span>
                                                    <b>Importe</b>
                                                </span>
                                            </div>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                                            <!-- marca de agua-->
                                            <div class="watermark" style="position:absolute;opacity:0.25;font-size:3em;width:100%;text-align:center;z-index:1000;-webkit-transform: rotate(-37deg);margin-top:450px;">
                                                <p>*NOTA DE ENTREGA*</p>
                                            </div>
                                            <!-- fin marca de agua -->
                                            <!--<hr style="height:2px;width:99.5%;background-color:black;margin-bottom:-1px;"/>-->
                            <tbody class="sale_tbody">
                                <!-- Variables -->
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="current_discount" t-value="0"/>
                                <t t-set="current_bruto" t-value="0"/>
                                <t t-set="lineas" t-value="0"/>
                                <t t-set="weight" t-value="0"/>
                                <t t-set="total_doc" t-value="0"/>
                                <!-- Fin variables -->
                                <t t-foreach="doc.order_line" t-as="line">
                                    <tr>
                                        <td style="padding:0px;margin:0px;border:none;">
                                            <!-- calculo peso -->
                                            <t t-if="line.product_id.weight">
                                                <t t-if="line.qty_delivered &gt; 0.01">
                                                    <t t-set="weight" t-value="weight + line.product_id.weight * line.qty_delivered"/>
                                                </t>
                                            </t>
                                            <!-- fin calculo peso -->
                                            <t t-set="productName" t-value="line.product_id.name"/>
                                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                            <!-- calculos del descuento -->
                                            <t t-set="current_discount" t-value="current_discount + (line.product_uom_qty*line.price_unit-line.price_subtotal)" groups="sale.group_discount_per_so_line"/>
                                            <!-- Fin calculos del descuento -->
                                            <!-- Calculos del bruto -->
                                            <t t-set="current_bruto" t-value="current_bruto + (line.product_uom_qty*line.price_unit)" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <!-- Fin calculos del bruto -->
                                            <t t-set="productName" t-value="line.name"/>
                                            <!--Si es nota -->
                                            <t t-if="not line.product_id">
                                                <div class="text-left" style="width:100%;font-size:0.7em;">
                                                    <span style="margin-left:15px;">NOTA:</span>
                                                    <span t-field="line.name"/>
                                                </div>
                                            </t>
                                            <!-- Fin si es nota -->
                                            <t t-if="line.product_id">
                                                <!-- verificar que no sea portes = 0€ -->
                                                <t t-set="mostrar" t-value="True"/>
                                                <t t-if="line.price_unit &lt; 0.01">
                                                    <t t-if="line.product_id.type == 'service'">
                                                        <t t-set="mostrar" t-value="False"/>
                                                    </t>
                                                </t>
                                                <!-- verificar que no sea portes = 0€ -->
                                                <t t-if="line.qty_delivered  &lt; 0.01">
                                                    <t t-set="mostrar" t-value="False"/>
                                                </t>
                                                <t t-if="mostrar == True">
                                                    <div style="font-size:0.7em;clear:both;width:100%;">
                                                        <!-- codigo -->
                                                        <div style="width:11%;display:block; float:left;">
                                                            <t t-if="line.product_id.default_code">
                                                                <span t-field="line.product_id.default_code"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span style="color:white;">aaa</span>
                                                            </t>
                                                        </div>
                                                        <!-- Fin codigo -->
                                                        <!-- Descripcion -->
                                                        <div style="width:43%;display:block;float:left;">
                                                            <t t-if="line.name">
                                                                <t t-set="productName" t-value="line.name"/>
                                                                <t t-set="name_num" t-value="productName.find(']') + 1 "/>
                                                                <t t-set="name" t-value="productName[name_num:]"/>
                                                                <span t-esc="name"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span style="color:white;">aaa</span>
                                                            </t>
                                                        </div>
                                                        <!-- Fin descripcion -->
                                                        <!-- % de IVA -->
                                                       <!--<div style="width:8%;display:block; float:left;text-align:right;">
                                                            <t t-set="IVALin" t-value="0"/>
                                                            <t t-foreach="line.tax_id" t-as="tax">
                                                                <t t-set="tax_name" t-value="tax.name"/>
                                                                <t t-set="isIVA" t-value="tax_name.find('IVA')"/>
                                                                <t t-if="isIVA &gt; -1">
                                                                    <t t-set="IVALin" t-value="'%.2f'%tax.amount"/>
                                                                </t>
                                                                <t t-else="">
                                                                </t>
                                                            </t>
                                                            <t t-if="IVALin != '0.00'">
                                                                <span t-esc="IVALin"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span style="color:white;">aaa</span>
                                                            </t>
                                                        </div> -->
                                                        <!-- Fin % de IVA -->
                                                        <!-- Cantidad entregada -->
                                                        <div style="width:8%; display:block; float:left; text-align:right">
                                                            <t t-if="line.qty_delivered">
                                                                <span t-esc="'%.2f'%line.qty_delivered"/>
                                                            </t>
                                                        </div>
                                                        <!-- Fin cantidad entregada -->
                                                        <!--Precio / U -->
                                                        <div style="width:10%; display:block;float:left; text-align:right;">
                                                            <span t-field="line.price_unit" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                                        </div>
                                                        <!-- Fin precio / u -->
                                                        <!-- Descuento -->
                                                        <div t-if="line.discount != 0.00" style="width:8%; display:block; float:left;text-align:right;">
                                                            <t t-if="line.discount != 0.00">
                                                                <span t-field="line.discount"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span style="color:white;">abc</span>
                                                            </t>
                                                        </div>
                                                        <div t-else="" style="width:8%; display:block; float:left;text-align:right;">
                                                            <span style="color:white;">aaa</span>
                                                        </div>
                                                        <!-- Fin descuento -->
                                                        <!-- Precio Neto / u -->
                                                        <div style="width:10%; display:block; float:left; text-align:right;">
                                                            <span t-esc="line.price_reduce" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                                        </div>
                                                        <!-- Fin precio neto / u -->
                                                        <!-- Precio total linea -->
                                                        <div style="width:10%; display:block;float:left;text-align:right;">
                                                            <t t-set="neto_linea" t-value="line.price_reduce * line.qty_delivered"/>
                                                            <span t-esc="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"></span>
                                                            <t t-set="total_doc" t-value="total_doc + neto_linea"/>
                                                        </div>
                                                        <!-- Lista de materiales -->
                                                        <t t-if="line.product_id.bom_count">
                                                            <t t-if="line.product_id.product_tmpl_id.bom_ids.to_print == True">
                                                                <t t-foreach="line.product_id.product_tmpl_id.bom_ids.bom_line_ids" t-as="bom_list">
                                                                    <div style="width:10%;margin-left:4%;font-size:0.7em;float:left;clear:both;">
                                                                        <t t-if="not bom_list.product_id.default_code">
                                                                            <i>
                                                                                <span style="color:white">aaa</span>
                                                                            </i>
                                                                        </t>
                                                                        <t t-else="">
                                                                            <i>
                                                                                <span t-esc="bom_list.product_id.default_code" />
                                                                            </i>
                                                                        </t>
                                                                    </div>
                                                                    <div style="width:28.35%;float:left;">
                                                                        <i>
                                                                            <span t-esc="bom_list.product_id.name"/>
                                                                        </i>
                                                                    </div>
                                                                    <div style="width:19.5%;float:left;text-align:right;">
                                                                        <i>
                                                                            <t t-set="kit_quantity" t-value="bom_list.product_qty*line.product_uom_qty"/>
                                                                            <span t-esc="'%.2f'%kit_quantity"/>
                                                                        </i>
                                                                    </div>
                                                                </t>
                                                            </t>
                                                        </t>
                                                        <!-- Fin Lista de materiales -->
                                                    </div>
                                                </t>
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                            <div>
                            <!-- IVA -->
                            <!-- Desglose -->
                            <div style="width:35%;float:right;font-size:0.7em;display:block;clear:both;">
						        <table style="border-bottom:4px solid black;width:100%;">
							        <tr style="margin:0;padding:0;">
                                        <td style="margin:0;padding:0;">
                                            <div style="width:50%;float:left;clear:both;">
								                <b>
									                <span style="margin-left:2px;">
											            Total
										            </span>
									            </b>
								            </div>
								            <div style="width:50%;float:left;text-align:right;">
									            <b>
										            <span style="margin-right:5px;" t-esc="total_doc" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}" />
									            </b>
								            </div>
								        </td>
							        </tr>
						        </table>
					        </div>
                            <div style="margin-top:10px;text-align:right;clear:both;" t-if="doc.state in ['draft','sent']">
                                <!--<p>Este presupuesto tiene una validez de 30 días.</p> -->
                            </div>
                            <!--<div style="margin-top:10px;text-align:right;clear:both;" t-if="doc.payment_term_id">
                                <span>Plazos de Pago: </span><span t-field="doc.payment_term_id"/>
                            </div>-->
                        </div>
                        <!-- plazos de pago -->
                        <t t-if="doc.payment_term_id.name">
                            <t t-set="plazos" t-value="doc.payment_term_id.name"/>
                        </t>
                        <!-- Fin plazos de pago-->
                        <!--<div t-if="doc.note" style="border:2px solid black;clear:both;margin-bottom:10px;">
                            <p style="text-align:center;">Observaciones:</p>
                            <span style="margin-left:10px;" t-field="doc.note"/>
                        </div>-->
                        <div t-if="doc.signature" class="mt32 ml16 mr16" name="signature">
                            <div class="offset-8">
                                <strong>Signature</strong>
                            </div>
                            <div class="offset-8">
                                <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                            </div>
                            <div class="offset-8 text-center">
                                <p t-field="doc.signed_by"/>
                            </div>
                        </div>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
