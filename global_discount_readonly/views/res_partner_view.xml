<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="global_discount_readonly.base_res_partner_form_view" model="ir.ui.view">
            <field name="name">base.res.partner.form.view.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base_global_discount.res_partner_form_view"/>
            <field name="arch" type="xml">
                 <xpath expr="//group[@name='sale']/field[@name='customer_global_discount_ids']" position="replace">
                     <field name="customer_global_discount_ids" invisible="1" readonly="1" widget="many2many_tags" groups="base_global_discount.group_global_discount" attrs="{'invisible': [('is_company', '=', False), ('parent_id', '!=', False)]}"/>
                 </xpath>
                <xpath expr="//group[@name='purchase']/field[@name='supplier_global_discount_ids']" position="replace">
                     <field name="supplier_global_discount_ids" invisible="1" readonly="1" widget="many2many_tags" groups="base_global_discount.group_global_discount" attrs="{'invisible': [('is_company', '=', False), ('parent_id', '!=', False)]}"/>
                 </xpath>
            </field>
        </record>
    </data>
</odoo>
